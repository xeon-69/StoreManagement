<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="650.0" prefWidth="650.0" spacing="15.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.TransactionDetailsController">
   <children>
      <Label styleClass="header-label" text="%details.title">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <GridPane hgap="20.0" vgap="10.0">
         <columnConstraints>
            <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label fx:id="saleIdLabel" text="Sale ID: " GridPane.columnIndex="0" GridPane.rowIndex="0">
               <font><Font name="System Bold" size="14.0" /></font>
            </Label>
            <Label fx:id="dateLabel" text="Date: " GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label fx:id="userLabel" text="User ID: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
         </children>
      </GridPane>

      <Label styleClass="sub-header-label" text="%details.itemsTitle">
          <font><Font name="System Bold" size="16.0" /></font>
      </Label>

      <TableView fx:id="itemsTable" prefHeight="200.0">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="itemCol" prefWidth="250.0" text="%pos.name" />
            <TableColumn fx:id="qtyCol" prefWidth="80.0" text="%pos.qty" />
            <TableColumn fx:id="priceCol" prefWidth="120.0" text="%pos.price" />
            <TableColumn fx:id="itemTotalCol" prefWidth="120.0" text="%pos.total" />
         </columns>
      </TableView>

      <Label styleClass="sub-header-label" text="%details.paymentsTitle">
          <font><Font name="System Bold" size="16.0" /></font>
      </Label>

      <TableView fx:id="paymentsTable" prefHeight="150.0">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="methodCol" prefWidth="250.0" text="%checkout.method" />
            <TableColumn fx:id="amountCol" prefWidth="150.0" text="%checkout.amount" />
         </columns>
      </TableView>

      <HBox alignment="CENTER_RIGHT" spacing="20.0">
         <VBox alignment="CENTER_RIGHT" spacing="5.0">
            <HBox spacing="10">
                <Label text="%details.subtotal" />
                <Label fx:id="subtotalLabel" text="0.00" />
            </HBox>
            <HBox spacing="10">
                <Label text="%details.discount" />
                <Label fx:id="discountLabel" text="0.00" />
            </HBox>
            <HBox spacing="10">
                <Label text="%details.tax" />
                <Label fx:id="taxLabel" text="0.00" />
            </HBox>
            <HBox spacing="10">
                <Label text="%details.total">
                    <font><Font name="System Bold" size="18.0" /></font>
                </Label>
                <Label fx:id="totalLabel" text="0.00">
                    <font><Font name="System Bold" size="18.0" /></font>
                </Label>
            </HBox>
         </VBox>
      </HBox>

      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#close" styleClass="btn-secondary" text="%dialog.ok" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
