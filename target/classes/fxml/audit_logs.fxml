<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox prefHeight="600.0" prefWidth="900.0" spacing="20.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.AuditLogController">
   <children>
      <Label styleClass="header-label" text="%audit.title" />
      
      <HBox spacing="10.0" alignment="CENTER_LEFT">
         <children>
            <TextField fx:id="searchField" promptText="%audit.search" prefWidth="350.0" styleClass="search-field" />
            <Button mnemonicParsing="false" onAction="#handleSearch" styleClass="btn-primary, search-button" contentDisplay="GRAPHIC_ONLY">
                <graphic><FontIcon iconLiteral="fas-search" iconColor="white"/></graphic>
                <tooltip><Tooltip text="%pos.searchBtn"/></tooltip>
            </Button>
         </children>
      </HBox>
      
      <TableView fx:id="auditTable" VBox.vgrow="ALWAYS">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="idCol" prefWidth="50.0" text="%audit.id" />
            <TableColumn fx:id="dateCol" prefWidth="150.0" text="%audit.date" />
            <TableColumn fx:id="userCol" prefWidth="100.0" text="%audit.user" />
            <TableColumn fx:id="actionCol" prefWidth="150.0" text="%audit.action" />
            <TableColumn fx:id="entityCol" prefWidth="150.0" text="%audit.entity" />
            <TableColumn fx:id="detailsCol" prefWidth="300.0" text="%audit.details" />
         </columns>
      </TableView>

      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Pagination fx:id="pagination" maxPageIndicatorCount="10" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
