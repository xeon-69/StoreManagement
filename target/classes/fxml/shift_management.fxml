<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.ShiftController" stylesheets="@../css/styles.css" styleClass="root">
    
    <Label text="Shift Management" styleClass="header-label" />

    <VBox maxWidth="400.0" spacing="15.0" styleClass="report-card" style="-fx-padding: 30; -fx-background-color: white;">
        
        <!-- Open Shift Container -->
        <VBox fx:id="openShiftContainer" spacing="15">
            <Label text="Start a new shift to begin using the POS." wrapText="true" />
            <VBox spacing="5">
                <Label text="Opening Cash Float ($)" />
                <TextField fx:id="openingCashField" promptText="e.g. 100.00" />
            </VBox>
            <Button fx:id="openShiftBtn" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleOpenShift" text="Start Shift" styleClass="btn-primary" />
        </VBox>

        <!-- Close Shift Container -->
        <VBox fx:id="closeShiftContainer" spacing="15" visible="false" managed="false">
            <Label text="Blind Close: Count the cash in the drawer and enter the actual amount below." wrapText="true" />
            <Label fx:id="shiftInfoLabel" style="-fx-font-weight: bold;" />
            
            <VBox spacing="5">
                <Label text="Actual Cash in Drawer ($)" />
                <TextField fx:id="actualCashField" promptText="Count the drawer..." />
            </VBox>
            <Button fx:id="closeShiftBtn" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleCloseShift" text="Close Shift" styleClass="btn-danger" />
        </VBox>

        <Label fx:id="errorLabel" textFill="RED" wrapText="true" />

        <Button mnemonicParsing="false" onAction="#handleBack" text="Cancel / Back" maxWidth="Infinity" styleClass="btn-secondary" />

    </VBox>
</VBox>
