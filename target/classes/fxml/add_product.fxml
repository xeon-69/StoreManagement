<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.AddProductController">
   <children>
      <Label text="Add New Product">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <VBox alignment="CENTER" spacing="5.0">
         <children>
             <javafx.scene.image.ImageView fx:id="productImageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
             <Button mnemonicParsing="false" onAction="#handleBrowseImage" text="Browse Image" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Barcode" />
            <TextField fx:id="barcodeField" promptText="Scan or enter barcode" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Name" />
            <TextField fx:id="nameField" promptText="Product Name" />
         </children>
      </VBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Category" />
            <javafx.scene.control.ComboBox fx:id="categoryComboBox" prefWidth="150.0" promptText="Select Category" maxWidth="Infinity" />
         </children>
      </VBox>
      <HBox spacing="10.0">
         <children>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Cost Price" />
                  <TextField fx:id="costPriceField" promptText="0.00" />
               </children>
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Selling Price" />
                  <TextField fx:id="sellingPriceField" promptText="0.00" />
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox spacing="5.0">
         <children>
            <Label text="Initial Stock" />
            <TextField fx:id="stockField" promptText="0" />
         </children>
      </VBox>
      <Label fx:id="messageLabel" textFill="RED" />
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
            <Button mnemonicParsing="false" onAction="#handleSave" prefWidth="80.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Save" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
