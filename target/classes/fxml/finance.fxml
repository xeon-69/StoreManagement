<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.FinanceController">
   <children>
      <Label text="Finance &amp; Expenses">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <HBox spacing="10.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label text="Category" />
                  <TextField fx:id="categoryField" promptText="e.g. Rent, Utility" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <Label text="Amount" />
                  <TextField fx:id="amountField" promptText="0.00" />
               </children>
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Description" />
                  <TextField fx:id="descField" promptText="Details" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#handleAddExpense" prefHeight="47.0" text="Add Expense">
               <VBox.margin>
                  <Insets top="22.0" />
               </VBox.margin>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="expenseTable" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="dateCol" prefWidth="150.0" text="Date" />
          <TableColumn fx:id="categoryCol" prefWidth="120.0" text="Category" />
            <TableColumn fx:id="descCol" prefWidth="300.0" text="Description" />
            <TableColumn fx:id="amountCol" prefWidth="100.0" text="Amount" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
