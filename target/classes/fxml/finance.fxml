<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox prefHeight="600.0" prefWidth="900.0" spacing="15.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.pos.system.controllers.FinanceController"
      stylesheets="@../css/styles.css">
   <children>
      <Label text="%finance.title" styleClass="header-label" />

      <!-- Date Range Filter -->
      <HBox spacing="10.0" alignment="CENTER_LEFT">
         <children>
            <ComboBox fx:id="dateRangeComboBox" prefWidth="160" />
            <DatePicker fx:id="startDatePicker" visible="false" managed="false" prefWidth="150" />
            <DatePicker fx:id="endDatePicker" visible="false" managed="false" prefWidth="150" />
         </children>
      </HBox>

      <!-- Summary Cards -->
      <HBox spacing="15.0" alignment="CENTER_LEFT">
         <children>
            <!-- Total Income -->
            <VBox styleClass="stat-card" HBox.hgrow="ALWAYS" spacing="5.0" alignment="CENTER_LEFT">
               <children>
                  <HBox spacing="8" alignment="CENTER_LEFT">
                     <children>
                        <FontIcon iconLiteral="fas-arrow-up" iconColor="#27ae60" iconSize="18"/>
                        <Label text="%finance.totalIncome" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
                     </children>
                  </HBox>
                  <Label fx:id="totalIncomeLabel" text="0.00 MMK"
                         style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" />
               </children>
               <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
            </VBox>

            <!-- Total Expenses -->
            <VBox styleClass="stat-card" HBox.hgrow="ALWAYS" spacing="5.0" alignment="CENTER_LEFT">
               <children>
                  <HBox spacing="8" alignment="CENTER_LEFT">
                     <children>
                        <FontIcon iconLiteral="fas-arrow-down" iconColor="#e74c3c" iconSize="18"/>
                        <Label text="%finance.totalExpenses" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
                     </children>
                  </HBox>
                  <Label fx:id="totalExpensesLabel" text="0.00 MMK"
                         style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" />
               </children>
               <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
            </VBox>

            <!-- Net Profit -->
            <VBox styleClass="stat-card" HBox.hgrow="ALWAYS" spacing="5.0" alignment="CENTER_LEFT">
               <children>
                  <HBox spacing="8" alignment="CENTER_LEFT">
                     <children>
                        <FontIcon iconLiteral="fas-chart-line" iconColor="#3498db" iconSize="18"/>
                        <Label text="%finance.netProfit" style="-fx-text-fill: #666; -fx-font-size: 12px;" />
                     </children>
                  </HBox>
                  <Label fx:id="netProfitLabel" text="0.00 MMK"
                         style="-fx-font-size: 22px; -fx-font-weight: bold;" />
               </children>
               <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
            </VBox>
         </children>
      </HBox>

      <!-- Add Expense Form -->
      <HBox spacing="10.0" alignment="BOTTOM_LEFT">
         <children>
            <VBox spacing="3.0" HBox.hgrow="SOMETIMES" prefWidth="180">
               <children>
                  <Label text="%categories.name" style="-fx-font-size: 11px;" />
                  <TextField fx:id="categoryField" promptText="e.g. Rent, Utility" />
               </children>
            </VBox>
            <VBox spacing="3.0" HBox.hgrow="SOMETIMES" prefWidth="130">
               <children>
                  <Label text="%finance.amount" style="-fx-font-size: 11px;" />
                  <TextField fx:id="amountField" promptText="0.00" />
               </children>
            </VBox>
            <VBox spacing="3.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="%finance.description" style="-fx-font-size: 11px;" />
                  <TextField fx:id="descField" promptText="Description..." />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#handleAddExpense" styleClass="btn-success" contentDisplay="GRAPHIC_ONLY" prefHeight="32">
               <graphic><FontIcon iconLiteral="fas-plus" iconColor="white"/></graphic>
               <tooltip><Tooltip text="%finance.addExpenseBtn"/></tooltip>
            </Button>
         </children>
      </HBox>

      <!-- Expenses Table -->
      <Label text="%finance.expensesTitle" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
      <TableView fx:id="expenseTable" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
          <TableColumn fx:id="idCol" prefWidth="50.0" text="%finance.id" />
          <TableColumn fx:id="dateCol" prefWidth="150.0" text="%finance.date" />
          <TableColumn fx:id="categoryCol" prefWidth="120.0" text="%categories.name" />
          <TableColumn fx:id="descCol" prefWidth="250.0" text="%finance.description" />
          <TableColumn fx:id="amountCol" prefWidth="100.0" text="%finance.amount" />
          <TableColumn fx:id="actionCol" prefWidth="80.0" text="Action" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
