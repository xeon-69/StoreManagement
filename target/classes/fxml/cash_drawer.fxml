<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="900.0" spacing="20.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.CashDrawerController">
   <children>
      <javafx.scene.layout.HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label styleClass="header-label" text="%drawer.title" />
            <javafx.scene.layout.Region>
               <javafx.scene.layout.HBox.hgrow><javafx.scene.layout.Priority fx:constant="ALWAYS" /></javafx.scene.layout.HBox.hgrow>
            </javafx.scene.layout.Region>
            <javafx.scene.control.Button fx:id="openDrawerBtn" mnemonicParsing="false" onAction="#handleOpenDrawer" styleClass="btn-primary" text="%drawer.open">
               <graphic><org.kordamp.ikonli.javafx.FontIcon iconLiteral="fas-cash-register" iconSize="16" iconColor="white"/></graphic>
            </javafx.scene.control.Button>
         </children>
      </javafx.scene.layout.HBox>
      
      <TableView fx:id="drawerTable" VBox.vgrow="ALWAYS">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="idCol" prefWidth="50.0" text="%drawer.id" />
            <TableColumn fx:id="dateCol" prefWidth="150.0" text="%drawer.date" />
            <TableColumn fx:id="shiftCol" prefWidth="80.0" text="%drawer.shift" />
            <TableColumn fx:id="userCol" prefWidth="100.0" text="%drawer.user" />
            <TableColumn fx:id="typeCol" prefWidth="120.0" text="%drawer.type" />
            <TableColumn fx:id="amountCol" prefWidth="120.0" text="%drawer.amount" />
            <TableColumn fx:id="descCol" prefWidth="300.0" text="%drawer.desc" />
         </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
