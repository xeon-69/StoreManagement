<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox prefHeight="600.0" prefWidth="900.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.FinanceController" stylesheets="@../css/styles.css">
   <children>
      <Label text="%finance.title" styleClass="header-label" />
      <HBox spacing="15.0" alignment="BOTTOM_LEFT">
         <children>
            <VBox spacing="5.0" HBox.hgrow="SOMETIMES" prefWidth="200">
               <children>
                  <Label text="%categories.name" />
                  <TextField fx:id="categoryField" promptText="e.g. Rent, Utility" />
               </children>
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="SOMETIMES" prefWidth="150">
               <children>
                  <Label text="%finance.amount" />
                  <TextField fx:id="amountField" promptText="0.00" />
               </children>
            </VBox>
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="%finance.description" />
                  <TextField fx:id="descField" promptText="%finance.description" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#handleAddExpense" styleClass="btn-success" contentDisplay="GRAPHIC_ONLY">
               <graphic><FontIcon iconLiteral="fas-plus" iconColor="white"/></graphic>
               <tooltip><Tooltip text="%finance.addExpenseBtn"/></tooltip>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="expenseTable" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
          <TableColumn fx:id="dateCol" prefWidth="150.0" text="%finance.date" />
          <TableColumn fx:id="categoryCol" prefWidth="120.0" text="%categories.name" />
          <TableColumn fx:id="descCol" prefWidth="300.0" text="%finance.description" />
          <TableColumn fx:id="amountCol" prefWidth="100.0" text="%finance.amount" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
