<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.LoginController" stylesheets="@../css/styles.css" styleClass="root">
    
    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
        <ComboBox fx:id="languageComboBox" />
    </HBox>

    <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
        <Label text="%login.appTitle" styleClass="header-label"/>
        
        <VBox maxWidth="350.0" spacing="15.0" styleClass="report-card" style="-fx-padding: 30; -fx-background-color: white;">
            <VBox spacing="5">
                <Label text="%login.username" />
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <FontIcon iconLiteral="fas-user" iconSize="16" />
                    <TextField fx:id="usernameField" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>
            
            <VBox spacing="5">
                <Label text="%login.password" />
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <FontIcon iconLiteral="fas-lock" iconSize="16" />
                    <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" />
                </HBox>
            </VBox>

            <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogin" text="%login.button" styleClass="btn-primary">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
                <graphic>
                    <FontIcon iconLiteral="fas-sign-in-alt" iconSize="16" iconColor="white"/>
                </graphic>
                <tooltip><Tooltip text="%login.button"/></tooltip>
            </Button>
            
            <Label fx:id="errorLabel" textFill="RED" wrapText="true" />
        </VBox>
    </VBox>
</VBox>
