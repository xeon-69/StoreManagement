<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane styleClass="login-background" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.LoginController">

    <!-- Centered Login Card -->
    <VBox alignment="CENTER" maxWidth="360" prefHeight="415.0" prefWidth="269.0" spacing="15" styleClass="login-card">
        <padding><Insets bottom="25" left="30" right="30" top="25" /></padding>
   
         <!-- Language Selector -->
         <HBox alignment="CENTER_RIGHT" spacing="8">
             <ComboBox fx:id="languageComboBox" styleClass="login-lang-combo" />
         </HBox>

        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="5">
            <StackPane alignment="CENTER" styleClass="login-icon-circle">
                <FontIcon iconLiteral="fas-store" iconSize="32" styleClass="login-brand-icon" />
            </StackPane>
            <Label styleClass="login-title" text="%login.appTitle" />
            <!-- <Label styleClass="login-subtitle" text="Sign in to continue" /> -->
        </VBox>

        <!-- Username Field -->
        <VBox spacing="5">
            <Label styleClass="login-field-label" text="%login.username" />
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="login-input-box">
                <FontIcon iconLiteral="fas-user" iconSize="14" styleClass="login-field-icon" />
                <TextField fx:id="usernameField" promptText="Enter your username" styleClass="login-text-field" HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5">
            <Label styleClass="login-field-label" text="%login.password" />
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="login-input-box">
                <FontIcon iconLiteral="fas-lock" iconSize="14" styleClass="login-field-icon" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="login-text-field" HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>

        <!-- Error Label (Hidden by default, shown on error) -->
        <Label fx:id="errorLabel" styleClass="login-error" wrapText="true" />

        <!-- Actions -->
        <VBox alignment="CENTER" spacing="15">
            <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogin" styleClass="login-btn" text="%login.button">
                <graphic>
                    <FontIcon iconColor="white" iconLiteral="fas-sign-in-alt" iconSize="14" />
                </graphic>
                <tooltip><Tooltip text="%login.button" /></tooltip>
            </Button>
        </VBox>

    </VBox>
</StackPane>
