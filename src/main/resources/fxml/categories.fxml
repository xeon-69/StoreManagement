<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.CategoryController" stylesheets="@../css/styles.css">
   <children>
      <Label text="%categories.title" styleClass="header-label" />
      
      <!-- Top Action Bar -->
      <HBox spacing="15.0" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
         <children>
            <TextField fx:id="searchField" promptText="%categories.search" prefWidth="350.0" styleClass="search-field" />
            <Button mnemonicParsing="false" onAction="#handleSearch" styleClass="btn-primary, search-button" contentDisplay="GRAPHIC_ONLY">
                <graphic><FontIcon iconLiteral="fas-search" iconColor="white"/></graphic>
                <tooltip><Tooltip text="%pos.searchBtn"/></tooltip>
            </Button>
            <HBox HBox.hgrow="ALWAYS"/>
            <Button mnemonicParsing="false" onAction="#handleAddCategory" styleClass="btn-success" contentDisplay="GRAPHIC_ONLY">
                <graphic><FontIcon iconLiteral="fas-plus" iconColor="white"/></graphic>
                <tooltip><Tooltip text="%categories.addBtn"/></tooltip>
            </Button>
         </children>
      </HBox>
      
      <!-- Bottom Table Space -->
      <TableView fx:id="categoryTable" VBox.vgrow="ALWAYS">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="idCol" maxWidth="100.0" minWidth="60.0" prefWidth="80.0" text="%categories.id" />
            <TableColumn fx:id="nameCol" maxWidth="350.0" minWidth="150.0" prefWidth="200.0" text="%categories.name" />
            <TableColumn fx:id="descCol" minWidth="300.0" text="%categories.description" />
            <TableColumn fx:id="actionCol" prefWidth="140.0" minWidth="120.0" maxWidth="160.0" text="%categories.actions" />
         </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
