<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="600.0" prefWidth="900.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.POSController">
   <children>
      <VBox spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
            <Label text="Product Search">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="searchField" promptText="Scan Barcode or Type Name..." HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#handleSearch" text="Search" />
               </children>
            </HBox>
            <javafx.scene.control.ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <javafx.scene.layout.TilePane fx:id="productTilePane" hgap="10.0" vgap="10.0" prefColumns="4" tileAlignment="TOP_LEFT" />
               </content>
            </javafx.scene.control.ScrollPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <VBox prefWidth="350.0" spacing="10.0" style="-fx-background-color: #f0f0f0;">
         <children>
            <Label text="Current Sale">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TableView fx:id="cartTable" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="cNameCol" prefWidth="140.0" text="Item" />
                <TableColumn fx:id="cQtyCol" prefWidth="110.0" text="Qty" />
                  <TableColumn fx:id="cTotalCol" prefWidth="100.0" text="Total" />
              </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Label text="Total:">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="totalLabel" text="\$0.00" textFill="#2980b9">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCheckout" prefHeight="50.0" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="CHECKOUT">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleClearCart" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Clear Cart" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
