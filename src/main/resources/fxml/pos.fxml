<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<SplitPane dividerPositions="0.65" prefHeight="700.0" prefWidth="1000.0" styleClass="pos-split-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.POSController" stylesheets="@../css/styles.css">
   <items>
      <VBox spacing="20.0">
         <padding>
            <Insets right="10.0" />
         </padding>
         <children>
            <Label text="%pos.title" styleClass="header-label"/>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="searchField" promptText="%pos.search" HBox.hgrow="ALWAYS" styleClass="search-field" />
                  <ComboBox fx:id="categoryFilter" prefWidth="150.0" promptText="%pos.allCategories" styleClass="category-combo" />
                  <Button mnemonicParsing="false" onAction="#handleSearch" text="%pos.searchBtn" styleClass="btn-primary, pos-tool-btn" contentDisplay="GRAPHIC_ONLY">
                      <graphic><FontIcon iconLiteral="fas-search" iconColor="white"/></graphic>
                      <tooltip><Tooltip text="%pos.searchBtn"/></tooltip>
                  </Button>
               </children>
            </HBox>
            <org.controlsfx.control.GridView fx:id="productGridView" cellHeight="240.0" cellWidth="160.0" horizontalCellSpacing="15.0" verticalCellSpacing="15.0" VBox.vgrow="ALWAYS" />
            <Pagination fx:id="pagination" maxPageIndicatorCount="5" VBox.vgrow="NEVER" />
         </children>
      </VBox>
      <VBox minWidth="350.0" maxWidth="800.0" spacing="15.0" styleClass="report-card" style="-fx-background-color: white;">
         <children>
            <Label text="%pos.currentSale" styleClass="sub-header-label"/>
            <TableView fx:id="cartTable" VBox.vgrow="ALWAYS">
              <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
              </columnResizePolicy>
              <columns>
                <TableColumn fx:id="cNameCol" prefWidth="150.0" text="%pos.name" />
                <TableColumn fx:id="cQtyCol" prefWidth="100.0" text="%pos.qty" />
                  <TableColumn fx:id="cTotalCol" prefWidth="100.0" text="%pos.total" />
              </columns>
            </TableView>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Label text="%pos.grandTotal">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="totalLabel" text="0.00 MMK" textFill="#2980b9">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCheckout" styleClass="btn-success" text="%pos.checkout">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <graphic><FontIcon iconLiteral="fas-shopping-bag" iconSize="20" iconColor="white"/></graphic>
               <tooltip><Tooltip text="%pos.checkout"/></tooltip>
            </Button>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleClearCart" styleClass="btn-danger" text="%pos.clearCartBtn">
                <graphic><FontIcon iconLiteral="fas-times" iconColor="white"/></graphic>
                <tooltip><Tooltip text="%pos.clearCartBtn"/></tooltip>
            </Button>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </items>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</SplitPane>
