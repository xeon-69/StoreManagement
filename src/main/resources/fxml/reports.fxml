<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.system.controllers.ReportsController">
   <children>
      <Label text="Reports &amp; Export">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <VBox spacing="10.0">
         <children>
            <Label text="Inventory" />
            <Button mnemonicParsing="false" onAction="#exportInventory" text="Export Inventory to PDF" />
         </children>
      </VBox>
      <VBox spacing="10.0">
         <children>
            <Label text="Sales" />
            <Button mnemonicParsing="false" text="Export Sales Report (Todo)" disable="true"/>
         </children>
      </VBox>
      <Label fx:id="statusLabel" textFill="#27ae60" />
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
